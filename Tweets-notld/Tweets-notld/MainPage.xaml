<Page
    x:Class="Tweets_notld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interfaces="using:Tweetinvi.Core.Interfaces"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView x:Name="MyGridView">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="interfaces:ITweet">
                    <StackPanel Height="100" Width="500" Background="DodgerBlue">
                        <TextBlock Text="{x:Bind CreatedBy}"/>
                        <TextBlock Text="{x:Bind Text}" x:Phase="1"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
